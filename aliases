## Container management
alias docker-stop="sudo systemctl stop docker.socket && sudo systemctl stop docker.service"
alias docker-start="sudo systemctl start docker.socket && sudo systemctl start docker.service"

alias podman-start="sudo systemctl start podman.socket && sudo systemctl start podman.socket"
alias podman-stop="sudo systemctl stop podman.socket && sudo systemctl stop podman.socket"

